<%- include('../../partials/header.ejs') %>
<body>
<%- include('../../partials/navBar.ejs') %>

<div class="container">

    <div class="mb-5 mt-5 row align-items-center">

        <div class="col-6">
            <h1 class="display-6">Usuarios</h1>
        </div>

        <div class="col-6 d-flex justify-content-end">
            <a class="btn btn-outline-dark" href="/admin/users/create">Novo Usuario</a>
        </div>

    </div>

    <table class="table table-dark table-striped table-hover table-bordered">

        <thead>

        <tr>
            <th>Id</th>
            <th>Email</th>
        </tr>

        </thead>

        <tbody>
        <% users.forEach( article => { %>
            <tr>
                <td> <%= article.id %> </td>
                <td> <%= article.email %> </td>
            </tr>
        <% }) %>
    </table>

</div>
<%- include('../../partials/footer.ejs') %>